<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <com.project.dailynewsb.dailynews.util.CircleImageView
        android:id="@+id/commnet_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/comment_paint" />

    <TextView
        android:id="@+id/commnet_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/commnet_item_icon"
        android:text="张三"
        android:textColor="@color/colorBlue" />


    <TextView
        android:id="@+id/commnet_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commnet_item_name"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/commnet_item_icon"
        android:text="呵呵" />


    <TextView
        android:id="@+id/commnet_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="20160708"
        android:textColor="@color/title_bg"
        android:textSize="12sp" />

</RelativeLayout>
