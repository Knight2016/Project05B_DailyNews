<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ViewPager标题头字体风格-->
    <style name="MyViewPagerTitleStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 等待层样式 -->
    <style name="MyWaitingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!-- WebView弹出框样式-->
    <style name="Menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 评论界面标题头 -->
    <style name="CommentTitleStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- PopupWindow弹出动画 -->
    <style name="MyPopupWindowStyle">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>

</resources>
